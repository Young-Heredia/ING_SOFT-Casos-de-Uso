@model IEnumerable<GESTIONAR_PROMOCIONES.Models.Promotion>
@{
    ViewData["Title"] = "Promotion Report";
}

<h2>Promotion Report</h2>

<form asp-action="PromotionReport" method="post">
    <div class="form-group">
        <label for="productId">Product</label>
        <select id="productId" name="productId" class="form-control" asp-items="ViewBag.Products">
            <option value="0">Select a product</option>
        </select>
    </div>
    <div class="form-group">
        <label for="sortOrder">Sort by</label>
        <select id="sortOrder" name="sortOrder" class="form-control" asp-items="ViewBag.SortOrder">
            <option value="">Select an option</option>
        </select>
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <select id="status" name="status" class="form-control" asp-items="ViewBag.Status">
            <option value="">Select a status</option>
        </select>
    </div>
    <div class="form-group">
        <label for="daysToExpire">Days to Expire</label>
        <select id="daysToExpire" name="daysToExpire" class="form-control" asp-items="ViewBag.DaysToExpire">
            <option value="">Select a range</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Initial Date</th>
                <th>End Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var promotion in Model)
            {
                <tr>
                    <td>@promotion.Name</td>
                    <td>@promotion.Price</td>
                    <td>@promotion.InitialDate</td>
                    <td>@promotion.EndDate</td>
                    <td>@promotion.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
