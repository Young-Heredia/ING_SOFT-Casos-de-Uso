@model IEnumerable<GESTIONAR_PROMOCIONES.Models.Product>
@{
    ViewData["Title"] = "Product Report";
}

<h2>Product Report</h2>

<form asp-action="ProductReport" method="post">
    <div class="form-group">
        <label for="categoryId">Category</label>
        <select id="categoryId" name="categoryId" class="form-control" asp-items="ViewBag.Categories">
            <option value="0">Select a category</option>
        </select>
    </div>
    <div class="form-group">
        <label for="sortOrder">Sort by</label>
        <select id="sortOrder" name="sortOrder" class="form-control" asp-items="ViewBag.SortOrder">
            <option value="">Select an option</option>
        </select>
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <select id="status" name="status" class="form-control" asp-items="ViewBag.Status">
            <option value="">Select a status</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                    <td>@product.Status</td>
                </tr>
            }
        </tbody>
    </table>
}